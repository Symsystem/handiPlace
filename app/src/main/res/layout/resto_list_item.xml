<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/resto_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="@string/list_item_resto_name"
            android:textSize="24sp"
            android:paddingTop="8dp"
            android:textColor="@android:color/black"
            android:paddingLeft="16dp"/>

        <TextView
            android:id="@+id/resto_cat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/resto_name"
            android:paddingTop="4dp"
            tools:text="@string/list_item_resto_type"
            android:textSize="18sp"
            android:textColor="#ff505050"
            android:paddingLeft="16dp"/>

        <IconTextView
            android:id="@+id/resto_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/resto_name"
            android:layout_alignParentRight="true"
            tools:text="{fa-star} {fa-star} {fa-star}"
            android:textSize="24sp"
            android:textColor="@color/accent"
            android:paddingRight="8dp"
            />

    </RelativeLayout>

</LinearLayout>